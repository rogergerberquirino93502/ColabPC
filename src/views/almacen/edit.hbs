<div class="container p-6">
    <a href="/almacen" class="fa fa-plus" focusable="false">
    Regresar
    </a>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card bg-dark">
                <div class="card-body">
                    <form action="/almacen/edit/{{link.ID_ALMACEN}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.ID_COMPRA}}" class="form-control" name="ID_COMPRA" placeholder="ID Compra" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.NOMBRE}}" class="form-control" name="NOMBRE" placeholder="Producto" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.TIPO}}" class="form-control" name="TIPO" placeholder="Tipo" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.CANTIDAD}}" class="form-control" name="CANTIDAD" placeholder="Cantidad" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.PRECIO_VENTA}}" class="form-control" name="PRECIO_VENTA" placeholder="Precio Venta" autofocus required>    
                        </div>
                        <div class="form-group">
                            <button class="btn btn-danger btn-block">
                                <i class="fas fa-edit"></i>
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>