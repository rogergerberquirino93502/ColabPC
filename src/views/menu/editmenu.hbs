<div class="container p-6">
    <a href="/menu" class="fa fa-plus" focusable="false">
    Regresar
    </a>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card bg-dark">
                <div class="card-body">
                    <form action="/menu/edit/{{link.id_menu}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.nombre}}" class="form-control" name="nombre" placeholder="Nombre" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.descripcion}}" class="form-control" name="descripcion" placeholder="Descripcion" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{link.precio}}" class="form-control" name="precio" placeholder="Precio" autofocus required>     
                        </div>
                        <div class="form-group">
                            <button class="btn btn-danger btn-block">
                                <i class="fas fa-edit"></i>
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>