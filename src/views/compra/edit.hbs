<div class="container p-6">
    <a href="/compra" class="fa fa-plus" focusable="false">
    Regresar
    </a>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card bg-dark">
                <div class="card-body">
                    <form action="/compra/edit/{{link.ID_COMPRA}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.ID_PRODUCTO}}" class="form-control" name="ID_PRODUCTO" placeholder="ID Producto" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.PRODUCTO}}" class="form-control" name="PRODUCTO" placeholder="Producto" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.CANTIDAD}}" class="form-control" name="CANTIDAD" placeholder="Cantidad" autofocus required>    
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.PRECIO_COMPRA}}" class="form-control" name="PRECIO_COMPRA" placeholder="Precio Compra" autofocus required>    
                        </div>
                        <div class="form-group">
                            <button class="btn btn-danger btn-block">
                                <i class="fas fa-edit"></i>
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>